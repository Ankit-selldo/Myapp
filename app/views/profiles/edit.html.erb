<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-2xl leading-6 font-bold text-gray-900 mb-2">Account Settings</h3>
      <p class="max-w-2xl text-sm text-gray-500">Update your personal and contact information below.</p>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <%= form_with(model: @user, url: profile_path, method: :patch, class: "space-y-8") do |f| %>
        <% if @user.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-y-8 gap-x-6 sm:grid-cols-2">
          <div class="sm:col-span-2">
            <h4 class="text-lg font-semibold text-gray-800 mb-2">Personal Information</h4>
          </div>
          <div class="sm:col-span-2">
            <%= f.label :name, "Full Name", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          <div class="sm:col-span-2">
            <%= f.label :avatar, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 flex items-center">
              <% if @user.avatar.attached? %>
                <%= image_tag @user.avatar.variant(:thumb), class: "h-12 w-12 rounded-full" %>
              <% end %>
              <%= f.file_field :avatar, class: "ml-5 rounded-md border border-gray-300 bg-white py-2 px-3 text-sm font-medium leading-4 text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
            </div>
            <p class="text-xs text-gray-400 mt-1">Upload a profile picture (optional).</p>
          </div>

          <div class="sm:col-span-2">
            <h4 class="text-lg font-semibold text-gray-800 mb-2 mt-6">Contact Information</h4>
          </div>
          <div class="sm:col-span-2">
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          <div class="sm:col-span-1">
            <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
            <%= f.telephone_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>

          <div class="sm:col-span-2">
            <h4 class="text-lg font-semibold text-gray-800 mb-2 mt-6">Address</h4>
          </div>
          <div class="sm:col-span-2">
            <%= f.label :address, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          <div class="sm:col-span-1">
            <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          <div class="sm:col-span-1">
            <%= f.label :state, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :state, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          <div class="sm:col-span-1">
            <%= f.label :postal_code, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :postal_code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          <div class="sm:col-span-1">
            <%= f.label :country, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :country, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
        </div>

        <div class="pt-8">
          <div class="flex justify-end">
            <%= link_to "Cancel", profile_path, class: "rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
            <%= f.submit "Update Profile", class: "ml-3 inline-flex justify-center rounded-md border border-transparent bg-blue-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 