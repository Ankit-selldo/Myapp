<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="px-3 py-2 rounded-md text-sm font-medium text-white bg-blue-600">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, {
    class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
    remote: remote,
    rel: page.rel
  } %>
<% end %> 