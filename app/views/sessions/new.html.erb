<%# Login Form %>
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Sign in to your account
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Or
      <%= link_to "create a new account", new_registration_path, class: "font-medium text-blue-600 hover:text-blue-500" %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_tag login_path, class: "space-y-6" do %>
        <div>
          <%= label_tag :email, "Email address", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= email_field_tag :email, nil, 
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                required: true,
                autofocus: true %>
          </div>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <%= label_tag :password, nil, class: "block text-sm font-medium text-gray-700" %>
            <%= link_to "Forgot your password?", new_password_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
          </div>
          <div class="mt-1">
            <%= password_field_tag :password, nil,
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                required: true %>
          </div>
        </div>

        <div>
          <%= submit_tag "Sign in", 
              class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
