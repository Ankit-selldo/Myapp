<% content_for :page_title do %>
  Dashboard
<% end %>

<%# Page Header %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
  <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
  <%# Stats Overview %>
  <div class="mt-8">
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
      <%# Total Products %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="rounded-md bg-blue-500 p-2">
                <i class="fas fa-box text-white text-xs"></i>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Products</dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-semibold text-gray-900"><%= @total_products %></div>
                  <div class="ml-2 flex items-baseline text-xs font-semibold text-green-600">
                    <i class="fas fa-arrow-up text-xs"></i>
                    <span class="ml-1">4.5%</span>
                  </div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <%= link_to admin_products_path, class: "text-sm font-medium text-blue-700 hover:text-blue-900" do %>
            View all <i class="fas fa-arrow-right text-xs ml-1"></i>
          <% end %>
        </div>
      </div>

      <%# Total Orders %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="rounded-md bg-green-500 p-2">
                <i class="fas fa-shopping-cart text-white text-xs"></i>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Orders</dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-semibold text-gray-900"><%= @total_orders %></div>
                  <div class="ml-2 flex items-baseline text-xs font-semibold text-green-600">
                    <i class="fas fa-arrow-up text-xs"></i>
                    <span class="ml-1">12.5%</span>
                  </div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <%= link_to "#", class: "text-sm font-medium text-blue-700 hover:text-blue-900" do %>
            View all <i class="fas fa-arrow-right text-xs ml-1"></i>
          <% end %>
        </div>
      </div>

      <%# Total Users %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="rounded-md bg-purple-500 p-2">
                <i class="fas fa-users text-white text-xs"></i>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Customers</dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-semibold text-gray-900"><%= @total_users %></div>
                  <div class="ml-2 flex items-baseline text-xs font-semibold text-green-600">
                    <i class="fas fa-arrow-up text-xs"></i>
                    <span class="ml-1">8.2%</span>
                  </div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <%= link_to "#", class: "text-sm font-medium text-blue-700 hover:text-blue-900" do %>
            View all <i class="fas fa-arrow-right text-xs ml-1"></i>
          <% end %>
        </div>
      </div>

      <%# Total Revenue %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="rounded-md bg-yellow-500 p-2">
                <i class="fas fa-dollar-sign text-white text-xs"></i>
              </div>
            </div>
            <div class="ml-4 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Revenue</dt>
                <dd class="flex items-baseline">
                  <div class="text-2xl font-semibold text-gray-900">₹<%= number_with_delimiter(rand(100000..999999)) %></div>
                  <div class="ml-2 flex items-baseline text-xs font-semibold text-green-600">
                    <i class="fas fa-arrow-up text-xs"></i>
                    <span class="ml-1">15.3%</span>
                  </div>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <%= link_to "#", class: "text-sm font-medium text-blue-700 hover:text-blue-900" do %>
            View detailed report <i class="fas fa-arrow-right text-xs ml-1"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%# Recent Activity Section %>
  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-2">
    <%# Recent Products %>
    <div class="bg-white shadow rounded-lg">
      <div class="p-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-medium text-gray-900">Recent Products</h2>
          <%= link_to admin_products_path, class: "text-sm text-blue-600 hover:text-blue-900" do %>
            View all <i class="fas fa-arrow-right ml-1"></i>
          <% end %>
        </div>
      </div>
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Price</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Stock</th>
              <th class="relative px-4 py-3"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_products.each do |product| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-2 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="h-8 w-8 flex-shrink-0 rounded bg-gray-100">
                      <% if product.image.attached? %>
                        <%= image_tag product.image, class: "h-6 w-6 object-contain rounded" %>
                      <% else %>
                        <div class="h-6 w-6 flex items-center justify-center">
                          <i class="fas fa-image text-gray-400 text-xs"></i>
                        </div>
                      <% end %>
                    </div>
                    <div class="ml-3">
                      <div class="text-sm font-medium text-gray-900 truncate max-w-xs"><%= product.name %></div>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-2 whitespace-nowrap text-sm text-right text-gray-500">₹<%= number_with_precision(product.price, precision: 2) %></td>
                <td class="px-4 py-2 whitespace-nowrap text-sm text-right <%= product.inventory_count < 10 ? 'text-red-600' : 'text-gray-500' %>">
                  <%= product.inventory_count %>
                </td>
                <td class="px-4 py-2 whitespace-nowrap text-right text-sm">
                  <%= link_to edit_admin_product_path(product), class: "text-gray-400 hover:text-blue-600" do %>
                    <i class="fas fa-edit text-xs"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# Low Stock Alert %>
    <div class="bg-white shadow rounded-lg">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-medium text-gray-900">Low Stock Alert</h2>
          <%= link_to admin_products_path, class: "text-sm text-blue-600 hover:text-blue-900" do %>
            View all <i class="fas fa-arrow-right ml-1"></i>
          <% end %>
        </div>
      </div>
      <ul role="list" class="divide-y divide-gray-200">
        <% @low_stock_products.each do |product| %>
          <li class="p-6">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0 h-12 w-12 rounded-lg overflow-hidden bg-gray-100">
                <% if product.image.attached? %>
                  <%= image_tag product.image, class: "h-full w-full object-contain" %>
                <% else %>
                  <div class="h-full w-full flex items-center justify-center">
                    <i class="fas fa-image text-gray-400"></i>
                  </div>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate"><%= product.name %></p>
                <p class="text-sm text-red-600">Only <%= product.inventory_count %> left in stock</p>
              </div>
              <div>
                <%= link_to edit_admin_product_path(product), class: "text-gray-400 hover:text-blue-600" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div> 