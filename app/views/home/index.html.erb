<%# Hero Section %>
<div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-16 mb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4">Welcome to Our Store</h1>
      <p class="text-xl text-blue-100 mb-8">Discover amazing products at great prices</p>
      
      <%# Search Bar %>
      <div class="max-w-2xl mx-auto">
        <%= form_tag products_path, method: :get, class: "flex items-center" do %>
          <div class="relative flex-grow">
            <%= text_field_tag :search, params[:search], 
                class: "w-full px-4 py-3 rounded-l-lg border-0 focus:ring-2 focus:ring-blue-500 text-gray-900",
                placeholder: "Search for products..." %>
          </div>
          <button type="submit" class="px-6 py-3 bg-blue-500 text-white rounded-r-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            <i class="fas fa-search"></i>
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%# Featured Products Section %>
<section class="mb-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Featured Products</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @featured_products.each do |product| %>
        <%= render 'products/product_card', product: product %>
      <% end %>
    </div>
  </div>
</section>

<%# Latest Products Section %>
<section class="mb-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Latest Products</h2>
      <%= link_to products_path, class: "text-blue-600 hover:text-blue-800" do %>
        View All <i class="fas fa-arrow-right ml-1"></i>
      <% end %>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @latest_products.each do |product| %>
        <%= render 'products/product_card', product: product %>
      <% end %>
    </div>
  </div>
</section>

<%# Blog Posts Section %>
<% if @blog_posts.any? %>
  <section class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">Latest from Our Blog</h2>
        <p class="mt-4 text-lg text-gray-600">Stay updated with our latest news and articles</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% @blog_posts.each do |post| %>
          <%= render 'blog_posts/blog_card', post: post %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<%# Newsletter Section %>
<section class="py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-blue-700 rounded-lg shadow-xl overflow-hidden">
      <div class="px-6 py-12 md:py-16 md:px-12 text-center md:text-left md:flex md:items-center md:justify-between">
        <div class="md:flex-1">
          <h2 class="text-2xl font-bold text-white mb-2">Subscribe to Our Newsletter</h2>
          <p class="text-blue-100">Get the latest updates about new products and special offers</p>
        </div>
        <div class="mt-8 md:mt-0 md:ml-8">
          <%= form_tag newsletter_subscriptions_path, class: "sm:flex" do %>
            <div class="min-w-0 flex-1">
              <%= email_field_tag :email, nil, 
                  placeholder: "Enter your email",
                  class: "block w-full px-4 py-3 rounded-md border-0 text-base text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-300" %>
            </div>
            <div class="mt-3 sm:mt-0 sm:ml-3">
              <%= submit_tag "Subscribe", 
                  class: "block w-full sm:w-auto px-6 py-3 rounded-md border border-transparent text-base font-medium text-blue-700 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-700" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section> 